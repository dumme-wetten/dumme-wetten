%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button',
        data: { toggle: 'collapse', target: '#navbar' }}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Home', root_path, class: 'navbar-brand'

    .collapse.navbar-collapse#navbar
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{href: '#', 'data-toggle' => 'dropdown', role: 'button', 'aria-expanded' => 'false', 'aria-haspopup' => "true"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to edit_user_registration_path do
                  %span.glyphicon.glyphicon-edit
                  Edit
              %li
                = link_to friendships_path do
                  %span.glyphicon.glyphicon-book
                  Freunde
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %span.glyphicon.glyphicon-log-out
                  Logout
        - else
          %li
            = link_to 'Registrieren', new_user_registration_path
          %li
            = link_to 'Login', new_user_session_path
